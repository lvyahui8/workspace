<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE struts PUBLIC        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"        "http://struts.apache.org/dtds/struts-2.3.dtd"><struts>    <constant name="struts.devMode" value="true"/>    <!--<constant name="struts.i18n.reload" value="true"/>-->    <!--<constant name="struts.configuration.xml.reload" value="true"/>-->    <constant name="struts.multipart.saveDir" value="/tmp"/>    <constant name="struts.multipart.maxSize" value="396014978"/>    <!-- 允许在action name中使用 / -->    <constant name="struts.enable.SlashesInActionNames" value="true"/>    <!-- 全局配置 -->    <package name="global" extends="struts-default">        <global-results>            <result name="r-site-login" type="redirectAction" >                <param name="namespace">/</param>                <param name="actionName">site-login</param>            </result>            <result name="r-site-index" type="redirectAction" >                <param name="namespace">/</param>                <param name="actionName">site-index</param>            </result>        </global-results>    </package>    <package name="fg" extends="struts-default,json-default,global" namespace="/">        <interceptors>            <interceptor name="admin" class="org.lyh.app.interceptors.AdminInterceptor">            </interceptor>        </interceptors>        <action name="admin" class="admin_indexAction">            <result name="success">/WEB-INF/views/admin/index/index.jsp</result>            <interceptor-ref name="admin" />        </action>        <action name="upload-*" class="uploadAction" method="{1}">            <param name="saveBasePath">/upload</param>            <param name="imagePath">/images</param>            <param name="videoPath">/video</param>            <param name="audioPath">/audio</param>            <param name="thumbnailPath">/thumbnail</param>        </action>        <action name="*-*" class="{1}Action" method="{2}">            <result name="success">/WEB-INF/views/{1}/{2}.jsp</result>            <!--<result name="r-{1}-{2}" type="redirectAction">-->            <!--<param name="actionName">{1}-{2}</param>-->            <!--</result>-->            <!--<result name="r-*-*" type="redirectAction">-->            <!--<param name="actionName">{1}-{2}</param>-->            <!--</result>-->            <result name="r-site-index" type="redirectAction">                <param name="actionName">site-index</param>            </result>            <result name="r-site-login" type="redirectAction">                <param name="actionName">site-login</param>            </result>            <result name="r-article-save" type="redirectAction">                <param name="actionName">article-save</param>            </result>            <result name="r-article-list" type="redirectAction">                <param name="actionName">article-list</param>            </result>            <result name="r-user-profile" type="redirectAction">                <param name="actionName">user-profile</param>            </result>            <result name="r-site-signIn" type="redirectAction">                <param name="actionName">site-signIn</param>            </result>            <result name="r-site-signUp" type="redirectAction">                <param name="actionName">site-signUp</param>            </result>            <result name="r-site-forgetPassword" type="redirectAction">                <param name="actionName">site-forgetPassword</param>            </result>            <result name="r-site-resetPassword" type="redirectAction">                <param name="actionName">site-resetPassword</param>            </result>        </action>        <!--<action name="*" class="siteAction" method="{1}">-->        <!--<result name="success">/WEB-INF/views/site/{1}.jsp</result>-->        <!--<result name="postRegister" type="json">-->        <!--&lt;!&ndash; 制定序列化哪一个属性&ndash;&gt;-->        <!--<param name="root">dataJson</param>-->        <!--&lt;!&ndash; &ndash;&gt;-->        <!--<param name="contentType">application/json</param>-->        <!--&lt;!&ndash; 排除为null的属性&ndash;&gt;-->        <!--&lt;!&ndash;<param name="excludeNullProperties">true</param>&ndash;&gt;-->        <!--&lt;!&ndash; 排除不需要的属性，逗号分割的正则表达式列表&ndash;&gt;-->        <!--&lt;!&ndash;<param name="excludeProperties">list.*</param>&ndash;&gt;-->        <!--</result>-->        <!--</action>-->    </package>    <package name="bk" extends="struts-default,global" namespace="/admin">        <interceptors>            <interceptor name="admin" class="org.lyh.app.interceptors.AdminInterceptor">            </interceptor>        </interceptors>        <action name="*-*" class="admin_{1}Action" method="{2}">            <result name="success">/WEB-INF/views/admin/{1}/{2}.jsp</result>            <result name="r-category-list" type="redirectAction">category-list</result>            <result name="r-exam-list" type="redirectAction">exam-list</result>            <result name="r-exam-save" type="redirectAction">exam-save</result>            <result name="r-video-list" type="redirectAction">video-list</result>            <result name="r-video-save" type="redirectAction">video-save</result>            <result name="r-audio-list" type="redirectAction">audio-list</result>            <result name="r-audio-save" type="redirectAction">audio-save</result>            <result name="r-article-list" type="redirectAction">article-list</result>            <result name="r-article-save" type="redirectAction">article-save</result>            <result name="r-user-list" type="redirectAction">user-list</result>            <result name="r-qstTpl-list" type="redirectAction">qstTpl-list</result>            <interceptor-ref name="admin"/>            <interceptor-ref name="defaultStack"/>        </action>    </package></struts>